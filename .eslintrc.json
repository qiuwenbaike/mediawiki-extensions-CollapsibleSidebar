{
	"root": true,
	"extends": [
		"wikimedia/client-common",
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"env": {
		"browser": true
	},
	"globals": {
		"exports": true
	},
	"rules": {
		"no-jquery/no-global-selector": "off",
		"no-jquery/no-fade": "off",
		"space-in-parens": 0,
		"mediawiki/msg-doc": "off"
	},
	"ignorePatterns": [
		"/.storybook/",
		"/docs/",
		"/i18n/",
		"/node_modules/",
		"/vendor/",
		"package.json",
		"package-lock.json",
		"pnpm-lock.yaml"
	]
}
